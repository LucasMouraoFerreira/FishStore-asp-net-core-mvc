@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link navbar-textu" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">OLÁ @(User.Identity.Name!).ToUpper()</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link navbar-textu">SAIR</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link navbar-textu" asp-area="Identity" asp-page="/Account/Register">CADASTRAR</a>
    </li>
    <li class="nav-item">
        <a class="nav-link navbar-textu" asp-area="Identity" asp-page="/Account/Login">ENTRAR</a>
    </li>
}
</ul>
